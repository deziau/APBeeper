{
  "name": "apbeeper_bot",
  "version": "1.0.0",
  "description": "Multi-server APB community Discord bot with status tracking, population display, and Twitch integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "setup": "node setup-env.js",
    "test-env": "node -e \"require('./src/envCheck.js')\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "node scripts/migrate-to-postgresql.js",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "validate": "node scripts/validate-deployment.js",
    "validate-simple": "node -e \"console.log('Package validation passed')\"",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "keywords": [
    "discord",
    "bot",
    "apb",
    "gaming",
    "community",
    "railway",
    "postgresql",
    "twitch"
  ],
  "author": "APBeeper Bot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/apbeeper_bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/apbeeper_bot/issues"
  },
  "homepage": "https://github.com/yourusername/apbeeper_bot#readme",
  "dependencies": {
    "@discordjs/rest": "^2.2.0",
    "axios": "^1.6.2",
    "discord-api-types": "^0.37.67",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
